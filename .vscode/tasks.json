{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "pytest (quoted venv)",
			"type": "shell",
			"command": "zsh",
			"args": [
				"-lc",
				"\"${workspaceFolder}/.venv/bin/python\" -m pytest -q"
			],
			"group": "build",
			"problemMatcher": ["$python"]
		},
		{
			"label": "run unit tests (script via zsh)",
			"type": "shell",
			"command": "zsh",
			"args": [
				"scripts/run_pytest.sh"
			],
			"group": "build",
			"problemMatcher": ["$python"]
		}
	]
}